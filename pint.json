{
    "preset": "laravel",
    "rules": {
        "declare_strict_types": true,
        "strict_param": true,
        "strict_comparison": true,
        "fully_qualified_strict_types": {
            "import_symbols": true,
            "leading_backslash_in_global_namespace": false,
            "phpdoc_tags": [
                "phpstan-param",
                "phpstan-property",
                "phpstan-property-read",
                "phpstan-property-write",
                "phpstan-return",
                "phpstan-var",
                "param",
                "property",
                "property-read",
                "property-write",
                "return",
                "see",
                "throws",
                "var"
            ]
        },
        "ordered_class_elements": {
            "order": [
                "use_trait",
                "case",
                "constant",
                "constant_public",
                "constant_protected",
                "constant_private",
                "property_public",
                "property_protected",
                "property_private",
                "construct",
                "destruct",
                "magic",
                "phpunit",
                "method_abstract",
                "method_public_static",
                "method_public",
                "method_protected_static",
                "method_protected",
                "method_private_static",
                "method_private"
            ],
            "sort_algorithm": "none"
        },
        "modernize_types_casting": true,
        "no_superfluous_elseif": true,
        "no_useless_else": true,
        "no_multiple_statements_per_line": true,
        "no_empty_comment": true
    }
}
